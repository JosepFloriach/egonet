<?xml version="1.0" encoding="UTF-8"?>
<project name="XDoclet Generator" default="_xdoclet_generation_">
	<property file="xdoclet-build.properties" />
	
	<property name="eclipse.basedir" value="/home/martins/.eclipse"/>
	<property name="xdoclet.basedir" value="${eclipse.basedir}/org.eclipse.sdk.ide/updates/eclipse/plugins/org.jboss.ide.eclipse.xdoclet.core_2.0.0.Beta2"/>
	<property name="j2ee.basedir" value="${eclipse.basedir}/org.eclipse.sdk.ide/updates/eclipse/plugins/org.jboss.ide.eclipse.jdt.j2ee.core_2.0.0.Beta2"/>
	<property name="wst.basedir" value="${eclipse.basedir}/org.eclipse.sdk.ide/updates/eclipse/plugins/org.jboss.ide.eclipse.jdt.ws.core_2.0.0.Beta2"/>

	
	<property name="jboss.net.version" value="4.0" />
	<path id="project.classpath">
		<pathelement location="bin" />
		<pathelement location="lib/strutslib/struts-legacy.jar" />
		<pathelement location="lib/strutslib/struts.jar" />
		<pathelement location="lib/strutslib/jakarta-oro.jar" />
		<pathelement location="lib/strutslib/commons-validator.jar" />
		<pathelement location="lib/strutslib/commons-lang.jar" />
		<pathelement location="lib/strutslib/commons-fileupload.jar" />
		<pathelement location="lib/strutslib/commons-digester.jar" />
		<pathelement location="lib/strutslib/commons-beanutils.jar" />
		<pathelement location="lib/strutslib/struts-workflow-1-0-3.jar" />
		<pathelement location="lib/appletlib/colt.jar" />
		<pathelement location="lib/strutslib/Struts-Layout.jar" />
		<pathelement location="lib/appletlib/jung-1.3.0.jar" />
		<pathelement location="lib/strutslib/commons-collections-3.0.jar" />
		<pathelement location="lib/strutslib/javax.servlet.jar" />
		<pathelement location="lib/strutslib/jbossall-client.jar" />
		<pathelement location="lib/strutslib/commons-logging.jar" />
		<pathelement location="lib/strutslib/jboss-j2ee.jar" />
		<pathelement location="lib/strutslib/elsutils.jar" />
	</path>
	<path id="xdoclet.classpath">
		<path refid="project.classpath" />
		<fileset dir="${xdoclet.basedir}">
			<include name="*.jar" />
			<exclude name="xdoclet-module-jboss-net-*.jar" />
		</fileset>
		<fileset dir="${xdoclet.basedir}">
			<include name="xdoclet-module-jboss-net-${jboss.net.version}*.jar" />
		</fileset>
	</path>
	<target name="_xdoclet_generation_" depends="server.xdoclet,web.xdoclet" />
	<target name="server.xdoclet" description="Standard EJB">
		<taskdef name="ejbdoclet" classname="xdoclet.modules.ejb.EjbDocletTask" classpathref="xdoclet.classpath" />
		<ejbdoclet ejbSpec="2.0" excludedTags="@version,@author,@todo" destDir="src" verbose="true" addedTags="">
			<fileset dir="src" includes="**/*EJB.java,**/*SB.java" excludes="com/endlessloopsoftware/egonet/web/**/*.java" />
			<packageSubstitution packages="ejb" substituteWith="interfaces" />
			<remoteinterface pattern="{0}Remote" />
			<localinterface />
			<homeinterface pattern="{0}RemoteHome" />
			<localhomeinterface />
			<valueobject>
				<PackageSubstitution packages="ejb" substituteWith="data" />
			</valueobject>
			<entitypk />
			<entitycmp>
				<PackageSubstitution packages="ejb" substituteWith="data" />
			</entitycmp>
			<utilobject includeGUID="true" cacheHomes="true" />
			<deploymentdescriptor validateXML="true" destDir="src/META-INF" />
			<jboss Version="4.0" datasource="java:/MySqlDS" datasourceMapping="mySQL" xmlencoding="UTF-8" validateXML="true" destDir="src/META-INF" />
		</ejbdoclet>
	</target>
	<target name="web.xdoclet" description="Standard Web">
		<taskdef name="webdoclet" classname="xdoclet.modules.web.WebDocletTask" classpathref="xdoclet.classpath"/>
		<webdoclet 
			destDir="WEB-INF"
			addedTags="@xdoclet-generated at ${TODAY},@copyright 2004 Endless Loop Software, Inc.,@author XDoclet,@version ${version}"
			excludedTags="@version,@author,@todo"
			verbose="true"
			>
			<deploymentdescriptor Servletspec="2.3"/>
			<fileset dir="src"  includes="**/*Servlet.java"/>

			<jbosswebxml Version="4.0"/>
			<jsptaglib jspversion="1.2" shortname="j2ee"/>
			<strutsconfigxml Version="1.2"/>
		</webdoclet>
	</target>
</project>
