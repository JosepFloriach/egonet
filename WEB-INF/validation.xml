<?xml version="1.0" encoding="UTF-8"?>

    <!DOCTYPE form-validation PUBLIC
         "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
    <formset>
        <form name="egoNameForm">
            <field
	         	property		= "firstName"
	         	depends		= "required,mask">
	         	<msg
	         		name 		= "mask"
	         		key  		= "egoname.firstname.maskmsg"/>
	         		
	         	<arg0
	         		key			= "egoname.firstname.displayname"/>
	         	<var>
	         		<var-name>mask</var-name>
	         		<var-value>^[a-zA-Z]*$</var-value>
	         	</var>
	         </field>
	         
            <field
	         	property    	= "lastName"
	         	depends		= "required,mask">
	         	<msg
	         		name 		= "mask"
	         		key  		= "egoname.lastname.maskmsg"/>
	         		
	         	<arg0
	         		key			= "egoname.lastname.displayname"/>
	         	<var>
	         		<var-name>mask</var-name>
	         		<var-value>^[a-zA-Z]*$</var-value>
	         	</var>
	         </field>
	 	</form>
	 	
	 	<form name="alterNameForm">
	 		<field
	 			property		= "name"
	 			depends		= "required,mask">
	 			
	         	<msg
	         		name 		= "required"
	         		key  		= "errors.required"/>
	         	<arg0
	         		name		= "required"
	         		key			= "alterprompt.name.reportname"/>
	         		
	         	<msg
	         		name 		= "mask"
	         		key  		= "alterprompt.name.maskmsg"/>
	         	<arg0
	         		name		= "mask"
	         		key			= "alternprompt.name.reportname"/>
	         		
	         	<var>
	         		<var-name>mask</var-name>
	         		<var-value>^[a-zA-Z.\s]*$</var-value>
	         	</var>
			</field>
		</form>	 			
    </formset>
</form-validation>